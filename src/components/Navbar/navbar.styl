.navbar {
  display: flex;
  justify-content: space-between;
  padding: 1.5em 1em;
  box-shadow: 0px 5px 10px -4px rgba(0, 0, 0, 0.1);
  position: relative

  .logo {
    font-family: 'Arvo', sans-serif;
    letter-spacing: 2px;
  }

  .categories {
    font-variant: all-small-caps;
    letter-spacing: 2px;
    padding: 0em 0.5em;
    font-weight: 500;
    cursor: pointer;

    &:hover {
      background-color: #dedede;
    }
  }
}